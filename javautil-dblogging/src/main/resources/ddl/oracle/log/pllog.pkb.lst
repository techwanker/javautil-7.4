539    procedure log (
540  	   p_log_msg	  in   varchar,
541  	   p_log_level	  in   pls_integer default g_info,
542  	   p_caller_name  in   varchar default null,
543  	   p_line_number  in   pls_integer default null,
544  	   p_dump_stack   in   boolean default false
545  	)
546  	is
547  	   my_message	varchar2 (32767);
548  	   --now	  timestamp	   := SYSDATE;
549  	   owner       varchar(64);
550  	   name        varchar(64);
551  	   line        number;
552  	   caller_type varchar(64);
553  	   my_logger_level number;
554  	   my_file_handle utl_file.file_type;
555  	   skip varchar(6) := ' skip ';
556  	begin
557  	       OWA_UTIL.who_called_me (owner,name,line,caller_type);
558  	       my_logger_level := get_log_level(name);
559  
560  	   if (g_debug) and p_log_level > my_logger_level then
561  		 skip := '	';
562  		 dbms_output.put_line(
563  		   'log() ' ||	skip ||
564  		   'caller: ' || p_caller_name ||
565  		   ' line: ' || p_line_number ||
566  		   ' my_logger_level: ' || to_char(my_logger_level) ||
567  		    ' p_log_level: '	 || to_char(p_log_level));
568  -- ||
569   --	 ' g_job_log.log_level: '     || to_char(g_job_log.log_level));
570  	   end if;
571  
572  	   if p_log_level <= my_logger_level then
573  	       my_message := logger_message_formatter  (
574  		   job_log_id	=> g_job_log.job_log_id,
575  		   job_msg_id	=> null,
576  		   log_msg	=> p_log_msg,
577  		   log_level	=> p_log_level,
578  		   caller_name	=> name,
579  		   line_number	=> line,
580  		   call_stack	=> null
581  	       );
582  	       -- write to file
